function OnFrame()
{
	/* manage camera */
	CameraMoveMouse();
	joystickMove();
	
	SetClearColor(0,0,0);
	SceneBegin();
	
	DrawGrid([0.5, 0.5, 0.5], 100);
	
	for (var i = 0; i < len(shapes); i++) {
		if(curShape == i) glColor(.26,.71,.90);
		shapes[i].DrawShape();
		if(curShape == i) glColor(1,1,1);
	}
	DrawCrossHairs();
	PickShape();
	SceneEnd();
}

